<!-- Add unique locals & redirect link and pass to template -->
<%= render layout:"user_mailer/template", 
           target:"_blank",
           locals: {
               preheader:"Your password has been reset", 
               first_name:"#{@user.email if @user.email.present?}",
               title:"Your password has been reset, if this was not you contact us at support@example.com."
               } do %>
               <%= mail_to "support@example.com", "Contact us", { 
                   style:"display: inline-block;
                              color: #ffffff; 
                              background-color: #635bff; 
                              border: solid 1px #635bff; 
                              border-radius: 5px; 
                              box-sizing: border-box; 
                              cursor: pointer; 
                              text-decoration: none; 
                              font-size: 14px; 
                              font-weight: bold; 
                              margin: 0; 
                              padding: 12px 25px; 
                              text-transform: capitalize; 
                              border-color: #635bff;" 
                                } %>
<% end %>