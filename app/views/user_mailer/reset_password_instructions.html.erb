<!-- Add unique locals & redirect link and pass to template -->
<%= render layout:"user_mailer/template", 
           target:"_blank",
           locals:{
               preheader:"Update your password", 
               first_name:"#{ params[:user].email if params[:user].email.present?}",
               title:"Click the link below to reset your password."
               } do %>
               <%= link_to "Reset Password", edit_password_url(@token), { 
                   style:"display: inline-block;
                              color: #ffffff; 
                              background-color: #635bff; 
                              border: solid 1px #635bff; 
                              border-radius: 5px; 
                              box-sizing: border-box; 
                              cursor: pointer; 
                              text-decoration: none; 
                              font-size: 14px; 
                              font-weight: bold; 
                              margin: 0; 
                              padding: 12px 25px; 
                              text-transform: capitalize; 
                              border-color: #635bff;" 
                                } %>
<% end %>